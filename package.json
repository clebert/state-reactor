{
  "name": "state-reactor",
  "version": "0.0.0",
  "description": "Efficient state management and reactive programming with an API inspired by React Hooks, designed for a variety of applications.",
  "repository": {
    "type": "git",
    "url": "https://github.com/clebert/state-reactor.git"
  },
  "license": "MIT",
  "author": "Clemens Akens",
  "sideEffects": false,
  "type": "module",
  "exports": "./lib/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "ci": "run-p compile:check compile:emit format:check lint test",
    "postci": "size-limit",
    "compile:check": "tsc",
    "compile:emit": "tsc --project tsconfig.emit.json",
    "format:check": "prettier --check .",
    "format:write": "prettier --write .",
    "lint": "eslint .",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --silent",
    "release": "npm version",
    "postrelease": "git push --follow-tags"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@size-limit/preset-small-lib": "^8.2.4",
    "@swc/core": "^1.3.52",
    "@swc/jest": "^0.2.26",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-markdown": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "size-limit": "^8.2.4",
    "typescript": "^5.0.4"
  },
  "size-limit": [
    {
      "name": "brotli compression",
      "limit": "458 B",
      "path": "./lib/index.js",
      "brotli": true
    },
    {
      "name": "gzip compression",
      "limit": "523 B",
      "path": "./lib/index.js",
      "gzip": true
    },
    {
      "name": "no compression",
      "limit": "1162 B",
      "path": "./lib/index.js",
      "gzip": false
    }
  ],
  "wallaby": {
    "env": {
      "params": {
        "runner": "--experimental-vm-modules"
      }
    }
  }
}
